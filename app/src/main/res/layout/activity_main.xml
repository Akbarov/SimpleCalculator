<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/inputEt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="end|bottom"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/keyboardLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/keyboardLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1.25"
        app:layout_constraintTop_toBottomOf="@id/inputEt">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Clean"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/clear_button"
                android:text="AC"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/brackets"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/operation_button"
                android:text="( )"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/inverse"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/operation_button"
                android:text="+/-"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/operation_button"
                android:text="+"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/seven"
                style="@style/ButtonStyle"
                android:text="7"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/eight"
                style="@style/ButtonStyle"
                android:text="8"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/nine"
                style="@style/ButtonStyle"
                android:text="9"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/subtract"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/operation_button"
                android:text="-"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/four"
                style="@style/ButtonStyle"
                android:text="4"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/five"
                style="@style/ButtonStyle"
                android:text="5"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/six"
                style="@style/ButtonStyle"
                android:text="6"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/operation_button"
                android:text="×"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/one"
                style="@style/ButtonStyle"
                android:text="1"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/two"
                style="@style/ButtonStyle"
                android:text="2"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/three"
                style="@style/ButtonStyle"
                android:text="3"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/divide"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/operation_button"
                android:text="÷"
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/dot"
                style="@style/ButtonStyle"
                android:text="."
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/zero"
                style="@style/ButtonStyle"
                android:text="0"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete"
                style="@style/ButtonStyle"
                android:text="⌫"
                tools:ignore="HardcodedText" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/equal"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/operation_button"
                android:text="="
                android:textColor="@color/black"
                tools:ignore="HardcodedText" />
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>